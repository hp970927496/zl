<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F3F5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#d5d8da"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/main_menu"
            android:layout_centerVertical="true"
            android:id="@+id/drawlayout_menu"
            android:onClick="IB_menu"/>

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/search"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/ib_search"
            android:onClick="IB_search"/>

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/drawlayout_menu"
            android:layout_toLeftOf="@id/ib_search"
            android:drawableLeft="@drawable/search_icon"
            android:hint="输入搜索商品"
            android:textSize="16sp"
            android:background="@drawable/autotextview_style"
            android:id="@+id/auto_textView_search"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/titleViewPager">
    </android.support.v4.view.ViewPager>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/hot"
        android:text="热门分类"/>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:id="@+id/main_gridView"/>

</LinearLayout>
